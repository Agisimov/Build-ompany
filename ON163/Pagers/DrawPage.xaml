<Page x:Class="ON163.Pagers.DrawPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ON163.Pagers"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="600"
      Title="DrawPage">

    <Grid>
        <DataGrid x:Name="DrawGrid"
                    Height="350"
                  Width="565"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Номер чертежа" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="80"/>
                <DataGridTextColumn Header="Фото" Binding="{Binding PhotoPath}" Width="100"/>
            </DataGrid.Columns>
            
        </DataGrid>
        <Button x:Name="delete"
                Content="удалить"
                  Height="30"
                Width="100"
                Margin="69,410,431,10" Click="delete_Click"
               
                />
        <Button x:Name="add"
                Content="добавить"
                  Height="30"
                Width="100"
                Margin="250,410,250,10" Click="add_Click" 
                
                />
    </Grid>
</Page>
